# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,kt,kts}]
indent_size = 4

[*.{kt,kts}]
ij_kotlin_imports_layout=*,java.**,javax.**,kotlin.**,^
klint_no-blank-line-before-rbrace = disabled


[*.md]
# Markdown uses double trailing whitespaces as special chars to force newlines
trim_trailing_whitespace = false
